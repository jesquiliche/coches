{
  "kind": "collectionType",
  "collectionName": "categorias",
  "info": {
    "singularName": "categoria",
    "pluralName": "categorias",
    "displayName": "categorias"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "unique": true
    },
    "descripcion": {
      "type": "richtext"
    },
    "imagen": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "subcategorias": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subcategoria.subcategoria",
      "mappedBy": "categoria"
    }
  }
}
